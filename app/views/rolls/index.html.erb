<p id="notice"><%= notice %></p>

<h1>Active Rolls in Process</h1>

<table class="table table-striped  table-hover table-bordered">
  <thead>
    <tr>
      <th>Roll ID</th>
      <th>Order ID</th>
      <th>Machine number</th>
      <th>QA sample weight</th>
      <th>Roll weight</th>
      <th>Ink complete</th>
      <th>Gusset complete</th>
      <th>Cut complete</th>
      <th>Operator name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rolls.each do |roll| %>
      <tr>
        <td><%= roll.id %></td>
        <td><%= roll.order_id %></td>
        <td><%= roll.machine_number %></td>
        <td><%= roll.qa_sample_weight %> g</td>
        <td><%= roll.roll_weight %> KG</td>
        <td><%= roll.roll_print_complete %></td>
        <td><%= roll.gusset_complete %></td>
        <td><%= roll.roll_cut_complete %></td>
        <td><%= roll.operator_name %></td>

        <td> 
          <%= link_to roll do %>
            <button class="btn btn-outline-info" disabled>Order Details</button>
          <% end %>
        </td>

        <td> 
          <%= link_to edit_roll_path(roll) do %>
            <button class="btn btn-outline-warning">Edit Order</button>
          <% end %>
        </td>

        <td> 
          <%= link_to roll, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <button class="btn btn-outline-danger">Delete Order</button>
          <% end %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>
<br>

