<h1>Active Orders</h1>

<table class="table table-striped  table-hover table-bordered">
  <thead>
    <tr class="text-center">
      <th>Order date</th>
      <th>Customer</th>
      <th>Material</th>
      <th>Film Width</th>
      <th>Filler</th>
      <th>Specifications</th>
      <th>Order weight</th>
      <th>Total printed</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="text-center">
        <td><%= order.created_at %></td>
        <td><%= order.customer_name %></td>
        <td><%= order.material %></td>
        <td><%= order.film_width %> CM</td>
        <td><%= order.filler %> %</td>
        <td><%= order.specifications %></td>
        <td><%= order.order_weight_kg %> KG</td>
        <td><%= order.total_printed_kg %> KG</td>
        <td><button class="btn btn-outline-success"><%= link_to 'New Roll', new_order_roll_path(order_id: order.id) %> </button></td>
        <td><button class="btn btn-outline-info"><%= link_to 'Order Details', order %></td>
      </tr>
    <% end %>
  </tbody>
</table>