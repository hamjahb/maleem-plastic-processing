<body class="text-center ">

  <p id="notice"><%= notice %> </p>

  <h1 class="container-fluid p-3 my-2 border">Order Id: <%= @order.id %><h1>

  <p class="container-fluid p-3 my-2 border">
    <strong>Customer name:</strong>
    <%= @order.customer_name %>
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Material:</strong>
    <%= @order.material %>
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Masterbatch:</strong>
    <%= @order.masterbatch %>
  </p>
  
  <p class="container-fluid p-3 my-2 border">
    <strong>Filler:</strong>
    <%= @order.filler %> %
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Thickness:</strong>
    <%= @order.thickness %> Micron
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Specifications:</strong>
    <%= @order.specifications %>
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Size:</strong>
    <%= @order.size %>
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Film Width:</strong>
    <%= @order.film_width %> CM
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Height:</strong>
    <%= @order.height %> CM
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Packing Weight:</strong>
    <%= @order.packing_weight %> KG/ Box
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Order weight kg:</strong>
    <%= @order.order_weight_kg %> KG
  </p>

  <br>

  <h3>Film:</h3>

  <p class="container-fluid p-3 my-2 border">
    <strong>Total film made:</strong>
    <%= @order.total_film_made %> KG
  </p>

  <br>

  <h3>Print:</h3>

  <p class="container-fluid p-3 my-2 border">
    <strong>Printed Complete:</strong>
    <%= @order.print_complete %>
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Total Printed Weight:</strong>
    <%= @order.total_printed_weight %> KG
  </p>
  
  <br>

  <h3>Cut:</h3>

  <p class="container-fluid p-3 my-2 border">
    <strong>Gusset:</strong>
    <%= @order.gusset %>
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Cut Complete:</strong>
    <%= @order.cut_complete %>
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Total boxes:</strong>
    <%= @order.total_boxes %> Boxes
  </p>

  <p class="container-fluid p-3 my-2 border">
    <strong>Delivered:</strong>
    <%= @order.delivered %>
  </p>

  <%= link_to edit_order_path(@order) do %>
    <button class="btn btn-warning btn-lg" disabled>Edit</button>
  <% end %> 

  |

  <%= link_to :back do %>
    <button class="btn btn-success btn-lg">Back</button>
  <% end %>


</body>