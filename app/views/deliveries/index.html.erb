<p id="notice"><%= notice %></p>

<h1>Deliveries</h1>

<table  class="table table-striped  table-hover table-bordered">
  <thead>
    <tr>
      <th>Order ID</th>
      <th>Quantity</th>
      <th>Delivery note number</th>
      <th>Delivery date</th>
      <th>Driver name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.order_id %></td>
        <td><%= delivery.quantity %> KG</td>
        <td><%= delivery.delivery_note_number %></td>
        <td><%= delivery.delivery_date %></td>
        <td><%= delivery.driver_name %></td>
        <td> 
          <%= link_to delivery do %>
            <button class="btn btn-outline-info">Delivery Info</button>
          <% end %>
        </td>

        <td> 
          <%= link_to edit_delivery_path(delivery) do %>
            <button class="btn btn-outline-warning">Edit Delivery</button>
          <% end %>
        </td>

        <td> 
          <%= link_to delivery, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <button class="btn btn-outline-danger">Delete Delivery</button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_delivery_path  do %>
  <button class="btn btn-success">New Delivery</button>
<% end %>