<p id="notice"><%= notice %></p>

<h1>Deliveries</h1>

<table>
  <thead>
    <tr>
      <th>Order</th>
      <th>Quantity</th>
      <th>Delivery note number</th>
      <th>Delivery date</th>
      <th>Driver name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @deliveries.each do |delivery| %>
      <tr>
        <td><%= delivery.order_id %></td>
        <td><%= delivery.quantity %></td>
        <td><%= delivery.delivery_note_number %></td>
        <td><%= delivery.delivery_date %></td>
        <td><%= delivery.driver_name %></td>
        <td><%= link_to 'Show', delivery %></td>
        <td><%= link_to 'Edit', edit_delivery_path(delivery) %></td>
        <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

