<h1>Print Order for <%= @order.customer_name%></h1>
<h4><%= @order.specifications%><h4>



<p id="notice"><%= notice %></p>

<h1>Rolls</h1>

<table class="table table-striped  table-hover table-bordered">
  <thead>
    <tr>
      <th>Roll ID</th>
      <th>Roll weight</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rolls.each do |roll| %>
      <tr>
        <td><%= roll.id %></td>
        <td><%= roll.roll_weight %> KG</td>


        <td> 
          <%= link_to printings_edit_path(id: roll.id) do %>
            <button class="btn btn-outline-success">Roll Print</button>
          <% end %>
        </td>

        <%
=begin%>
 <td> 
          <%= link_to edit_roll_path(roll) do %>
            <button class="btn btn-outline-warning">Edit Order</button>
          <% end %>
        </td>

        <td> 
          <%= link_to roll, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <button class="btn btn-outline-danger">Delete Order</button>
          <% end %>
        </td> 
<%
=end%>

      </tr>
    <% end %>
  </tbody>
</table>
<br>

