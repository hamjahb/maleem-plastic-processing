<h1>Active Printing Orders</h1>

<p id="notice"><%= notice %></p>


<table class="table table-striped  table-hover table-bordered">
  <thead>
    <tr class="text-center">
      <th>Order date</th>
      <th>Customer</th>
      <th>Size</th>
      <th>Specifications</th>
      <th>Film Ready for printing</th>
      <th>Finished Printing</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr class="text-center">
        <td><%= order.created_at %></td>
        <td><%= order.customer_name %></td>
        <td><%= order.size %> </td>
        <td><%= order.specifications %> </td>
        <td><%= order.total_film_made %> KG</td>
        <td><%= order.total_printed_weight %> KG</td>

        <td> 
          <%= link_to printings_show_path(order_id: order.id) do %>
            <button class="btn btn-outline-success">Print Rolls</button>
          <% end %>
        </td>

        <td> 
          <%= link_to order do %>
            <button class="btn btn-outline-info">Order Details</button>
          <% end %>
        </td>
        
      </tr>
    <% end %>
  </tbody>
</table>

